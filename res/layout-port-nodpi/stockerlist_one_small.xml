<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/small"
    android:layout_width="192dp"
    android:layout_height="256dp"
    >
    	<ImageView
	    	android:id="@+id/smallbackground"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:src="@drawable/stock_small_background"
	        />
        <LinearLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:baselineAligned="false">
	        <LinearLayout
			    android:id="@+id/dong"
			    android:layout_width="fill_parent" 
			    android:layout_height="40dp"
				android:orientation="horizontal"
				android:layout_marginTop="3dp"	
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				 >
			   <TextView
				android:id="@+id/smallName"
				android:layout_height="fill_parent"
			    android:layout_width="fill_parent"
			    android:gravity="center"
				android:textSize="18dp"
			    android:singleLine="true"
			    android:ellipsize="end"
				android:textColor="@color/stock_text_color"
			    />
			</LinearLayout> 		
		    <TextView
		        android:layout_width="140dp"
		        android:layout_height="35dp"
		        android:layout_marginTop="30dp"
		        android:layout_marginLeft="25dp"	
                android:textColor="@color/stock_text_color_zhang"
			    android:textSize="36dp" 
			    android:includeFontPadding="false"
			    android:singleLine="true"
		        android:id="@+id/smallValue_z"/>
		    <TextView
		        android:layout_width="140dp"
		        android:layout_height="35dp"
		        android:layout_marginTop="30dp"
		        android:layout_marginLeft="25dp"	
                android:textColor="@color/stock_text_color_die"
			    android:textSize="36dp" 
			    android:includeFontPadding="false"
			    android:singleLine="true"
			    android:visibility="gone"
		        android:id="@+id/smallValue_d"/>
	        <TextView
		        android:layout_width="144dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"		
		        android:layout_marginLeft="25dp"
                android:textColor="@color/stock_one_text"
			    android:textSize="24dp" 
			    android:includeFontPadding="false"
			    android:singleLine="true"
			    android:ellipsize="end"
		        android:id="@+id/smallstockerZuiXinJG"/>		
	        <TextView
		        android:layout_width="144dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="64dp"		
		        android:layout_marginLeft="25dp"
                android:textColor="@color/stock_one_text"
			    android:textSize="24dp" 
			    android:includeFontPadding="false"
			    android:singleLine="true"
			    android:ellipsize="end"
		        android:id="@+id/smallstockerCode"/>		
	    </LinearLayout>
       
        <LinearLayout
           android:layout_width="192dp" 
		   android:layout_height="wrap_content"
		   android:visibility="gone"
		   >
		    <ImageView
			    android:id="@+id/info"
				android:layout_width="105dp"
				android:layout_height="105dp"
			    android:layout_marginLeft="15dp"
			   />
       		<TextView
		        android:layout_width="160dp"
		        android:layout_height="105dp"		   
                android:layout_marginLeft="15dp"
                android:textColor="@color/stock_text_color"
			    android:textStyle="bold" 
			    android:textSize="27dp" 
			    android:singleLine="true"
			    android:gravity="bottom"
			    android:text="@string/newworknull"
			    android:visibility="gone"
		        android:id="@+id/nodate"/>	
        </LinearLayout>
</FrameLayout>
